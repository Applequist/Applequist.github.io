---
import { SITE_TITLE } from '../consts';
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
console.log(currentPath);
---

<div class="banner flex-row">
	<header>
		<p class="prompt">{SITE_TITLE}</p>
	</header>
	<nav>
		<ul>
			<li><a class={currentPath === "" ? "active" : "" } href="/">Home</a></li>
			<li><a class={currentPath === "about" ? "active" : "" } href="/about">About</a></li>
			<li><a class={currentPath === "blog" ? "active" : "" } href="/blog">Blog</a></li>
		</ul>
	</nav>
</div>
